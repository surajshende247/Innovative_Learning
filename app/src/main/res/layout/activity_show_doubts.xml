<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE1D8"
    tools:context=".askdoubts.ShowDoubts">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_doubts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/layout_doubt" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbAddQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:backgroundTint="#FFFFFF"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerview_doubts"
        app:layout_constraintEnd_toEndOf="@+id/recyclerview_doubts"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/ico_ask_doubt" />
</androidx.constraintlayout.widget.ConstraintLayout>